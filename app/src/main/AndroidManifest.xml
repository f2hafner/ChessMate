<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.game.chessmate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.ChessMate">
        <activity android:name=".cardScreen"></activity>
        <activity android:name=".RulesScreen" />
        <activity android:name=".Lobby" />
        <activity android:name=".CreateSession" />
        <activity android:name=".GameActivity" />
        <activity android:name=".HomeActivity" />
        <activity android:name=".RuleActivity" />
        <activity android:name=".OptionsActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>